<h1>Books</h1>

<table>
 <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
    <tr>
     <td>
      <% @books.each do |book| %>
  
     <p>
      <span>
         <%= book.title %>
         <%= book.body %>
      </span>
     
        <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
     </p>
    <% end %>
   </td>
   </tr>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>
   errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book , url: '/books', method: :post do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>
 
 <h4>Body</h4>
 <%= f.text_area :body %>

<p>
 <%= f.submit 'Create Book' %>
</p>
 
<% end %>